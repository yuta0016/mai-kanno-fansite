                      )}
                    </div>

                    {/* „Éó„É©„ÉÉ„Éà„Éï„Ç©„Éº„É† */}
                    {schedule.platform && (
                      <div className="mb-3">
                        <span className="text-gray-700">
                          <span className="font-medium">ÈÖç‰ø°:</span> {schedule.platform}
                        </span>
                      </div>
                    )}

                    {/* Âá∫ÊºîËÄÖ */}
                    {schedule.performer && (
                      <div className="mb-3">
                        <span className="text-gray-700">
                          <span className="font-medium">Âá∫Êºî:</span> {schedule.performer}
                        </span>
                      </div>
                    )}

                    {/* Ë™¨Êòé */
                    {schedule.description && (
                      <p className="text-gray-600 mb-3 whitespace-pre-wrap">
                        {schedule.description}
                      </p>
                    )}

                    {/* URL */}
                    <div className="mt-4 flex flex-wrap gap-3">
                      {schedule.officialUrl && (
                        <Link
                          href={schedule.officialUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          className="inline-flex items-center text-pink-600 hover:text-pink-700 font-medium"
                        >
                          <span>ÂÖ¨Âºè„Çµ„Ç§„Éà</span>
                          <svg
                            className="w-4 h-4 ml-1"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              strokeLinecap="round"
                              strokeLinejoin="round"
                              strokeWidth={2}
                              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                            />
                          </svg>
                        </Link>
                      )}
                      {schedule.broadcastPageUrl && (
                        <Link
                          href={schedule.broadcastPageUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          className="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium"
                        >
                          <span>ÈÖç‰ø°„Éö„Éº„Ç∏</span>
                          <svg
                            className="w-4 h-4 ml-1"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              strokeLinecap="round"
                              strokeLinejoin="round"
                              strokeWidth={2}
                              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                            />
                          </svg>
                        </Link>
                      )}
                    </div>
                  </div>

                  {/* „Çπ„ÉÜ„Éº„Çø„Çπ„Éê„ÉÉ„Ç∏ */}
                  <div className="flex flex-wrap gap-2 md:flex-col md:items-end">
                    {schedule.status.map((status) => (
                      <span
                        key={status}
                        className={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${
                          status === '‰∫àÂÆö'
                            ? 'bg-green-100 text-green-800'
                            : status === 'ÈÖç‰ø°‰∏≠'
                            ? 'bg-yellow-100 text-yellow-800'
                            : 'bg-gray-100 text-gray-800'
                        }`}
                      >
                        {status}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            ))
          )}
        </div>
      </div>
    </div>
  );
}
